@model IEnumerable<Product>

@{
        ViewData["Title"] = "Products";
}

<h1>Produkty</h1>

<p>
        <a asp-action="Create">Create New</a>
</p>

<table class="table">
        <thead>
                <tr>
                        <th>Nazwa</th>
                        <th>Cena</th>
                        <th>Kategoria</th>
                        <th>Zdjęcie</th>
                        <th></th>
                </tr>
        </thead>
        <tbody>
                @foreach (var item in Model)
                {
                        <tr>
                                <td>
                                    @Html.ActionLink(item.Name, "Details",new { ID = item.Id })
                                </td>
                                <td>
                                        @item.Price.ToString("C2")
                                </td>
                                <td>
                                        @item.Category.Name
                                </td>
                                <td>
                                        <img src="/media/products/@item.Image" width="100" alt="" />
                                </td>
                                <td>
                                        <a asp-action="Edit" asp-route-id="@item.Id">Edytuj</a> |
                                        <a asp-action="Delete" asp-route-id="@item.Id" class="confirmDeletion">Usuń</a>
                                </td>
                        </tr>
                }
        </tbody>
</table>

<div class="d-flex w-100 justify-content-center">
    <pagination page-count="@(Convert.ToInt32(ViewBag.TotalPages))"
                page-number="@(Convert.ToInt32(ViewBag.PageNumber))"
                page-range="@(Convert.ToInt32(ViewBag.PageRange))"
                page-target="/admin/products/">
    </pagination>
</div>

