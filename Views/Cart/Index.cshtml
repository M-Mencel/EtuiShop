@model CartViewModel

@{
    ViewData["Title"] = "Cart Overview";
}
<br />
<br />

@if (Model.CartItems.Count > 0)
{
    <h1 align="center" class="fw-bold mb-0 text-black">Koszyk</h1>
    <section class="h-100" style="background-color: #eee;">
        <div class="container h-100 py-5">
            <div class="row d-flex justify-content-center align-items-center h-100">
                <div class="col-10">


                    <div class="card rounded-3 mb-4">
                        <div class="card-body p-4">
                            @foreach (var item in Model.CartItems)
                            {

                                <div class="row d-flex justify-content-between align-items-center">
                                    <div class="col-md-2 col-lg-2 col-xl-2">
                                        <img src="~/media/products/@item.Image" class="img-fluid rounded-3">
                                    </div>
                                    <div class="col-md-3 col-lg-3 col-xl-3">
                                        <p class="lead fw-normal mb-2">@item.ProductName</p>
                                    </div>
                                    <div class="col-md-3 col-lg-3 col-xl-2 d-flex">
                                        <a class="btn btn-link px-2"
                                   asp-action="Decrease" asp-route-id="@item.ProductId">
                                            <i class="fas fa-minus"></i>
                                        </a>
                                        <input id="form1" name="quantity" value="@item.Quantity"
                                       class="form-control form-control-sm" />
                                        <a class="btn btn-link px-2"
                                   asp-action="Add" asp-route-id="@item.ProductId">
                                            <i class="fas fa-plus"></i>
                                        </a>
                                    </div>
                                    <div class="col-md-3 col-lg-2 col-xl-2 offset-lg-1">
                                        <h5 class="mb-0">@Model.CartItems.Where(x => x.ProductId == item.ProductId).Sum(x => x.Quantity * x.Price).ToString("C2")</h5>
                                    </div>
                                    <div class="col-md-1 col-lg-1 col-xl-1 text-end">
                                        <a asp-action="Remove" asp-route-id="@item.ProductId" class="text-danger"><i class="fas fa-trash fa-lg"></i></a>
                                    </div>
                                </div>

                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <div class="row text-center h-100">
        <div class="col-md-12 text-center my-auto">
            <div class="card card-block d-flex">
                <div class="card-body align-items-center d-flex justify-content-center">
                    Suma: @Model.GrandTotal.ToString("C2")
                </div>
            </div>
        </div>
    </div>

    <div class="column">
        <div class="card">
            <a asp-controller="Cart" asp-action="Summary" class="btn btn-warning btn-block btn-lg">Przejdź do podania danych</a>

        </div>
    </div>



}
else
{
    <h3 class="display-4 text-center">Twój koszyk jest pusty</h3>
}